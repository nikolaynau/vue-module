{
  "private": true,
  "version": "1.0.3",
  "packageManager": "pnpm@10.4.1",
  "type": "module",
  "author": "Nikolay Naumenkov<https://github.com/nikolaynau>",
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r run build",
    "check": "tsc --noEmit",
    "clean": "rimraf --glob packages/*/dist .eslintcache",
    "release": "bumpp --all -r",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "format": "prettier --write --cache .",
    "test": "vitest",
    "test-unit": "vitest --project unit",
    "test-e2e": "vitest --project e2e",
    "test-dts": "pnpm run build && pnpm run test-dts-only",
    "test-dts-only": "pnpm tsd -f ./*.test-d.ts packages/dts-test",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@commitlint/types": "^19.5.0",
    "@eslint/js": "^9.21.0",
    "@types/node": "^22.13.5",
    "bumpp": "^10.0.3",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.1",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.2",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "tsd": "^0.31.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vitest": "^3.0.6"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged --no-stash",
    "commit-msg": "pnpm commitlint --edit"
  },
  "lint-staged": {
    "*.{ts,vue}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{js,json,md}": [
      "prettier --write"
    ]
  }
}
