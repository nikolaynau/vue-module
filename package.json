{
  "name": "@vuemodule/monorepo",
  "type": "module",
  "version": "1.0.5",
  "private": true,
  "packageManager": "pnpm@10.18.1",
  "author": "Nikolay Naumenkov<https://github.com/nikolaynau>",
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r run build",
    "check": "vue-tsc --build",
    "clean": "rimraf --glob packages/*/dist .eslintcache",
    "release": "bumpp",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "format": "prettier --write --cache .",
    "test": "vitest",
    "test-unit": "vitest --project unit",
    "test-e2e": "vitest --project e2e",
    "test-dts": "pnpm run build && pnpm run test-dts-only",
    "test-dts-only": "pnpm tsd -f ./*.test-d.ts packages/dts-test",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/types": "^20.0.0",
    "@eslint/js": "^9.37.0",
    "@types/node": "^24.7.0",
    "bumpp": "^10.3.1",
    "glob": "^11.0.3",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.13.1",
    "tsd": "^0.33.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged --no-stash",
    "commit-msg": "pnpm commitlint --edit"
  },
  "lint-staged": {
    "*.{ts,vue}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{js,json,md}": [
      "prettier --write"
    ]
  }
}
